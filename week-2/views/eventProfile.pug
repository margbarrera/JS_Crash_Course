extends layout

block content
    h1 #{fetchedEvent.name}
    h4 Giftee:
    p1 #{fetchedEvent.giftee}
    h4 Date:
    p1 #{fetchedEvent.date}
    h4 Guests:
    p1 #{fetchedEvent.guestList.map(x => x.name).join(', ')}
    h4 Gifts:
    p1 #{fetchedEvent.giftList.map(x => `${x.gift.name} (${x.submittedby.name})`).join(', ')}
    script.
         console.log('To invite a guest to this event post their ID. Ex.: axios.post(\'/event/1/guests\', {guest: 3})')
         console.log('To uninvite a guest to this event post their ID. Ex.: axios.delete(\'/event/1/guests/3\', {})')
         console.log('To add a gift to this event post their ID, alongside your ID. Ex.: axios.post(\'/event/1/gifts\', {user: 3, gift: 2})')


